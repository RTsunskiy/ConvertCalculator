<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="result"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/default_margin"
        android:id="@+id/item_quantity_tv"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_below="@id/item_quantity_tv"
        android:layout_marginStart="@dimen/default_margin"
        android:hint="@string/value_insert_hint"
        android:id="@+id/value_insert_et"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_below="@id/value_insert_et"
        android:layout_marginStart="@dimen/default_margin"
        android:text="@string/from_tv"
        android:id="@+id/from_tv"
        android:textSize="@dimen/big_size_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:id="@+id/from_rv"
        android:layout_below="@id/from_tv"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_height="wrap_content"
        android:id="@+id/item_quantity_result_tv"
        android:layout_alignParentRight="true"
        tools:text="result"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:layout_below="@id/item_quantity_result_tv"
        android:hint="@string/display_value_result"
        android:layout_marginEnd="@dimen/default_margin"
        android:id="@+id/display_value_et"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/in_tv"
        android:text="@string/in_string"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/big_size_tv"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_below="@id/display_value_et"
        android:textSize="@dimen/big_size_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_below="@id/in_tv"
        android:id="@+id/in_rv"/>


</RelativeLayout>